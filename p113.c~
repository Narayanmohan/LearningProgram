#include<stdio.h>
int main()
{

int i,j,k;

char a[100];
char b[100];
char c[100];

i=0;
printf("Enter char for Array-A");
scanf("%c",&a[i]);
while(a[i]!='$')
{

	i++;
scanf("%c",&a[i]);

}


j=0;

printf("Enter char for Array-B");

scanf("%c",&b[j]);

while(b[j]!='$')
{

	j++;
scanf("%c",&b[j]);


} 

 
i=0;
k=0;
while(a[i]!='$')
{

 c[k]=a[i];
 i++;
 k++;	

}

//printf("%d",k);

j=0;
while(b[j]!='$')
{

c[k] = b[j];
j++;
k++;
//printf("%d",k);
  
}
//printf("%d",c[k]+'i');


k=0;
while(c[k]!='$')
{

 printf("%c",c[k]);
 k++;

} 


}